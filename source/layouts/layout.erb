<!doctype html>
<html class="no-js" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "The Middleman" %></title>
    
    <%= stylesheet_link_tag "style" %>
    <%= javascript_include_tag "modernizr" %>
    <script type="text/javascript" src="//use.typekit.net/pub7kjl.js"></script>
    <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
  </head>
  
  <body class="loading <%= page_classes %>">
   <!--  <%= partial "partials/_pattern-style-menu" %> -->
    <%= partial "partials/_header" %>

    <div id="preload">
      <img src="img/bcg_slide-1.jpg">
      <img src="img/bcg_slide-2.jpg">
      <img src="img/bcg_slide-3.jpg">
      <img src="img/bcg_slide-4.jpg">
    </div>

    <%= yield %>
    <%= partial "partials/_footer" %>
    <%= javascript_include_tag  "all" %>
  </body>
</html>